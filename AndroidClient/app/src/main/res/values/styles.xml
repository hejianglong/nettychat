<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="DayTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color41c5f6</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/color41c5f6</item>
        <item name="colorAccent">@color/color41c5f6</item>
        <item name="tv_color">@color/color000000</item>
        <item name="ui_background">@color/colorffffff</item>
        <item name="img_svip">@drawable/qq_setting_svip</item>
        <item name="img_qianbao">@drawable/qq_setting_qianbao</item>
        <item name="img_zhuangban">@drawable/qq_setting_zhuangban</item>
        <item name="img_shoucang">@drawable/qq_setting_shoucang</item>
        <item name="img_xiangce">@drawable/qq_setting_xiangce</item>
        <item name="img_wenjian">@drawable/qq_setting_wenjian</item>
        <item name="img_freetraffic">@drawable/qq_setting_freetraffic</item>
        <item name="img_setting">@drawable/qq_setting_setting</item>
        <item name="img_daynight">@drawable/qq_setting_me_nightmode_on</item>
        <item name="search_bg">@drawable/shape_search</item>
        <item name="search_tv_color">@color/colorbdbdbd</item>
        <item name="search_icon">@drawable/qb_group_menu_search_group</item>
        <item name="div_color">@color/colore3e4e6</item>
    </style>
    <style name="NightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color41c5f6</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/color41c5f6</item>
        <item name="colorAccent">@color/color41c5f6</item>
        <item name="tv_color">@color/colorffffff</item>
        <item name="ui_background">@color/color5e6377</item>
        <item name="img_svip">@drawable/qq_setting_svip_white</item>
        <item name="img_qianbao">@drawable/qq_setting_qianbao_white</item>
        <item name="img_zhuangban">@drawable/qq_setting_zhuangban_white</item>
        <item name="img_shoucang">@drawable/qq_setting_shoucang_white</item>
        <item name="img_xiangce">@drawable/qq_setting_xiangce_white</item>
        <item name="img_wenjian">@drawable/qq_setting_wenjian_white</item>
        <item name="img_freetraffic">@drawable/qq_setting_freetraffic_white</item>
        <item name="img_setting">@drawable/qq_setting_setting_white</item>
        <item name="img_daynight">@drawable/qq_setting_me_nightmode_off_white</item>
        <item name="search_bg">@drawable/shape_search_nightmode</item>
        <item name="search_tv_color">@color/tv_search_colornight</item>
        <item name="search_icon">@drawable/skin_qvip_individuation_search_white</item>
        <item name="div_color">@color/div_colornight</item>
    </style>

    <style name="splashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="fullscreen" parent="DayTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="signupstyle" parent="DayTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="profilestyle" parent="DayTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
       <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>
</resources>
