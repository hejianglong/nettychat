<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".mvvm.view.activity.SignUpActivity">

        <RelativeLayout
            android:layout_marginTop="20pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ie_arrow_disable"
                android:id="@+id/back"
                android:onClick="onClick"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="注册"
                android:textColor="@color/color000000"
                android:textStyle="bold"
                android:textSize="16sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="50pt"
            android:layout_marginRight="50pt"
            android:id="@+id/ll_account"
            android:layout_marginTop="100pt"
            android:layout_width="match_parent"
            android:layout_height="105pt">

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号"
                android:textColor="@color/color000000"
                android:layout_marginRight="50pt"
                android:textSize="20sp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_account"
                android:background="@null"
                android:hint="QQ号/手机号/邮箱"
                android:textColor="@color/color000000"
                android:textSize="16sp"
                />

            <include
                layout="@layout/hdivlayout"
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:layout_below="@+id/tv_account"
                android:layout_marginTop="20pt"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="50pt"
            android:layout_marginRight="50pt"
            android:id="@+id/ll_pass"
            android:layout_marginTop="40pt"
            android:layout_below="@id/ll_account"
            android:layout_width="match_parent"
            android:layout_height="105pt">

            <TextView
                android:id="@+id/tv_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码"
                android:textColor="@color/color000000"
                android:layout_marginRight="50pt"
                android:textSize="20sp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_pass"
                android:background="@null"
                android:inputType="textPassword"
                android:hint="请填写密码"
                android:textColor="@color/color000000"
                android:textSize="16sp"
                />

            <include
                layout="@layout/hdivlayout"
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:layout_below="@+id/tv_pass"
                android:layout_marginTop="20pt"/>
        </RelativeLayout>
        <Button
            android:layout_width="match_parent"
            android:text="注册"
            android:layout_marginLeft="50pt"
            android:layout_marginRight="50pt"
            android:id="@+id/signupbtn"
            android:onClick="onClick"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/shape_login_btn"
            android:textColor="@color/colorffffff"
            android:layout_height="105pt"
            android:layout_marginTop="100pt"
            android:layout_below="@+id/ll_pass"
            />
    </LinearLayout>
</layout>